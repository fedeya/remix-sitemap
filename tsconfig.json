{
  "compilerOptions": {
    "target": "ES2019",
    "rootDir": "./src",
    "types": ["vitest/globals"],
    "allowJs": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
