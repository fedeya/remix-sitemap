{
  "compilerOptions": {
    "target": "ES2019",
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "./dist/esm",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "CommonJS",
    "declarationDir": "./dist/@types",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": [
    "node_modules",
    "coverage"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
